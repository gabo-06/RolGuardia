@*PaletaMultiple/Index*@
@section styles
{
    @*<link href="~/Content/css/datatables_checkboxes/dataTables.checkboxes.css" rel="stylesheet" />*@
    <style>
        tr > th:first-child:after,
        tr > th:first-child:before
        {
            display: none !important;
        }

        .custom-control-label:after,
        .custom-control-label:before
        {
            left: inherit;
        }
    </style>
}
@section scripts
{
    @*<script src="~/Scripts/datatables_checkboxes/dataTables.checkboxes.min.js"></script>*@
    <script src="~/Scripts/vistas/papeleta_multiple.js"></script>
}
@{
    ViewBag.Title = "Papeleta Múltiple";
}
<h1 class="text-primary font-weight-bold mb-4"><i class="far fa-list-alt"></i> Papeleta Múltiple</h1>
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs pull-right" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tab-1">Listado</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tab-2">Registro</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane fade show active" role="tabpanel">
                            @*<div class="card bg-light pt-2 col-12 col-lg-12 col-xxl-12 ">*@
                            <div class="card bg-light">
                                <div class="card-body">
                                    <form>
                                        <div class="row">
                                            <div class="form-group col-xl-6 col-sm-12 mb-4">
                                                <label class="col-form-label text-left font-weight-bold" for="txtNumeroPapeletaF">Número de Papeleta</label>
                                                <input type="text" class="col-lg-12 form-control" id="txtNumeroPapeletaF" tabindex="6" placeholder="Número de Papeleta">
                                            </div>
                                            <div class="form-group col-xl-6 col-sm-12 mb-4">
                                                <label class="col-form-label text-left font-weight-bold" for="txtApellidosNombresF">Apellidos y Nombres</label>
                                                <input type="text" class="col-lg-12 form-control" id="txtApellidosNombresF" tabindex="6" placeholder="Apellidos y Nombres">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-lg-12 col-xxl-12">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <table id="tblPapeletaMultiple" class="table table-striped table-light" style="width:100%">
                                                <thead>
                                                    <tr class="bg-dark text-light">
                                                        <th></th>
                                                        <th></th>
                                                        <th>Número de Papeleta</th>
                                                        <th>Grado</th>
                                                        <th>Especialidad</th>
                                                        <th>Apellidos y Nombres</th>
                                                        <th>Departamento</th>
                                                        <th>Fecha de Registro</th>
                                                        <th>Operaciones</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*</div>*@
                        </div>
                        <div id="tab-2" class="tab-pane fade show" role="tabpanel">
                            @*<div class="card bg-light pt-2 col-12 col-lg-12 col-xxl-12 ">*@
                            <form>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-xl-2 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtCIPF">CIP:</label>
                                                    <input type="text" class="col-lg-12 form-control" id="txtCIPF" tabindex="6" placeholder="CIP">
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-xl-6 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtGradoNombre">Grado y Nombre:</label>
                                                    <input type="text" class="col-lg-12 form-control" id="txtGradoNombre" tabindex="6" placeholder="Grado y Nombre" readonly>
                                                </div>
                                            </div>
                                            <div class="col-xl-2 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtCIP">CIP:</label>
                                                    <input type="text" class="col-lg-12 form-control" id="txtCIP" tabindex="6" placeholder="CIP" readonly>
                                                </div>
                                            </div>
                                            <div class="col-xl-4 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtDepartamento">Departamento:</label>
                                                    <input type="text" class="col-lg-12 form-control" id="txtDepartamento" tabindex="6" placeholder="Departamento" readonly>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <!--#region Combo Tipo de Condición -->
                                        <div class="row">
                                            <div class="col-xl-4 col-sm-12">
                                                <div class="form-group">
                                                    <label for="cmbPeriodo" class="col-form-label text-left font-weight-bold">Tipo de Condición</label>
                                                    <select class="form-control" id="cmbPeriodo" name="validation-select">
                                                        <option value>Seleccione...</option>
                                                        <optgroup label="Climbing">
                                                            <option value="pitons">Pitons</option>
                                                            <option value="cams">Cams</option>
                                                            <option value="nuts">Nuts</option>
                                                            <option value="bolts">Bolts</option>
                                                            <option value="stoppers">Stoppers</option>
                                                            <option value="sling">Sling</option>
                                                        </optgroup>
                                                        <optgroup label="Skiing">
                                                            <option value="skis">Skis</option>
                                                            <option value="skins">Skins</option>
                                                            <option value="poles">Poles</option>
                                                        </optgroup>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <!--#endregion -->
                                        <hr />
                                        <div class="row">
                                            <div class="col-xl-2 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtShipName">CIP:</label>
                                                    <input type="text" class="col-lg-12 form-control" id="txtShipName" tabindex="6" placeholder="CIP">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-9 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtShipName">Grado y Nombre:</label>
                                                    <input type="text" class="col-lg-12 form-control" id="txtShipName" tabindex="6" placeholder="Grado y Nombre" readonly>
                                                </div>
                                            </div>
                                            <div class="col-xl-3 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtFechaCubrira">Cubrirá el día:</label>
                                                    <div class="input-group date">
                                                        <span class="input-group-prepend">
                                                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                                        </span>
                                                        <input type="text" class="form-control dtpFecha" id="txtFechaCubrira" tabindex="3" placeholder="Order Date" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xl-2 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtShipName">CIP:</label>
                                                    <input type="text" class="col-lg-12 form-control" id="txtShipName" tabindex="6" placeholder="CIP">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xl-9 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtShipName">Grado y Nombre:</label>
                                                    <input type="text" class="col-lg-12 form-control" id="txtShipName" tabindex="6" placeholder="Grado y Nombre" readonly>
                                                </div>
                                            </div>
                                            <div class="col-xl-3 col-sm-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtFechaDevolvera">Devolverá el día:</label>
                                                    <div class="input-group date">
                                                        <span class="input-group-prepend">
                                                            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                                        </span>
                                                        <input type="text" class="form-control dtpFecha" id="txtFechaDevolvera" tabindex="3" placeholder="Order Date" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label class="col-form-label text-left font-weight-bold" for="txtShipName">Motivo:</label>
                                                    <textarea class="form-control" placeholder="Motivo" rows="5" tabindex=""></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 text-right">
                                        <button type="button" class="btn btn-primary text-right" data-toggle="modal" data-target="#centeredModalSuccess" tabindex="13"><i class="far fa-save"></i> Registrar PM</button>
                                        <button type="submit" class="btn btn-danger text-right" tabindex="13"><i class="fas fa-power-off"></i> Cancelar</button>
                                        <!--#region Modal de confirmación de registro de paleta múltiple -->
                                        <div class="modal fade" id="centeredModalSuccess" tabindex="-1" role="dialog" style="display: none;" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title font-weight-bold">Confirmación</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body m-3 text-center">
                                                        <p class="mb-0">¿Esta seguro de registrar esta papeleta múltiple?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-success" data-dismiss="modal">Si</button>
                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--#endregion -->
                                    </div>
                                </div>
                            </form>
                            @*</div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
